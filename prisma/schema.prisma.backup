generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core System
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("editor") // admin, editor, dosen
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  staff     Staff?
}

model Setting {
  key       String   @id
  value     Json     // Flexible settings (colors, logo, social links)
  updatedAt DateTime @updatedAt
}

// Content Management
model Page {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   Json?    // Block-based content from the Page Builder
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String?  @db.Text
  image     String?
  published Boolean  @default(false)

  authorId  String?
  author    Staff?   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Campus Modules
model Staff {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // For personal page: /dosen/nama-dosen
  nidn      String?  // NIDN/NIP
  role      String?  // Lecturer, Dean, etc.
  bio       String?
  image     String?
  links     Json?    // Linktree style: [{ label: "Scholar", url: "..." }]
  pddiktiData Json?  // Raw data from API
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId    String?  @unique // Link to User account
  user      User?    @relation(fields: [userId], references: [id])
  posts     Post[]
  headedProdi ProgramStudi[] @relation("HeadOfProdi")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  startDate   DateTime
  endDate     DateTime?
  location    String?
  image       String?
  category    String?  // Academic, Holiday, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Download {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryAlbum {
  id        String   @id @default(cuid())
  title     String
  description String?
  coverImage String?
  images    GalleryImage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  size      Int?     // Size in bytes
  width     Int?
  height    Int?
  albumId   String
  album     GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String   // e.g. "Alumni 2021"
  content   String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id          String   @id @default(cuid())
  name        String   @default("KampusCMS")
  description String?
  logo        String?  // URL to logo
  
  // Theme
  colors      Json?    // { primary: "#...", secondary: "#..." }
  fonts       Json?    // { heading: "Inter", body: "Inter" }
  
  // Layout
  headerLinks Json?    // Array of navigation links
  footerConfig Json?   // { description: string, contact: string, links: [] }
  footerText  String?
  
  // Scripts & SEO
  headCode    String?  // Google Verification, etc.
  bodyCode    String?  // Analytics, etc.

  // External APIs
  pddiktiUrl  String?  @default("https://api-frontend.kemdikbud.go.id")

  // AI Configuration
  aiConfig    Json?    // { provider: 'gemini' | 'openai', geminiKey: '...', openaiKey: '...' }
  
  updatedAt   DateTime @updatedAt
}

model Alert {
  id        String   @id @default(cuid())
  content   String   // The text to display
  link      String?  // Optional link
  isActive  Boolean  @default(true)
  startDate DateTime @default(now())
  endDate   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProgramStudi {
  id            String   @id @default(cuid())
  code          String   @unique // e.g. "TI"
  name          String   // e.g. "Teknik Informatika"
  degree        String   // e.g. "S1"
  vision        String?  @db.Text
  mission       String?  @db.Text
  accreditation String?  // e.g. "Unggul"
  
  headOfProdiId String?
  headOfProdi   Staff?   @relation("HeadOfProdi", fields: [headOfProdiId], references: [id])
  
  curriculum    Json?    // Structure: [{ semester: 1, courses: [{ code: "TI101", name: "Algorithm", credits: 3 }] }]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TracerResponse {
  id            String   @id @default(cuid())
  nim           String   @unique
  nama          String
  kodeProdi     String
  tahunLulus    Int
  
  // Contact
  nomorHP       String?
  email         String?
  
  // F8: Employment Status
  // "Kerja", "Wirausaha", "Studi", "Mencari", "Tidak"
  status        String   
  
  // Job Data (if Working/Entrepreneur)
  bidangKerja   String?  // F1101: Swasta, Pemerintah, BUMN, Sendiri, Ngo
  namaPerusahaan String?
  jenisInstansi String? 
  jabatan       String?
  
  // F502: Waiting Time (months)
  waktuTunggu   Int?     
  
  // F505: Salary Range
  gaji          String?  
  
  // Relevance
  kesesuaianBidang String? // Sangat Sesuai, Sesuai, Kurang, Tidak
  
  feedback      String?  @db.Text
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
